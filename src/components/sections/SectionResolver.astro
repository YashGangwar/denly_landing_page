---
import type { CollectionEntry } from "astro:content";
import About from "./About.astro";
import Features from "./Features.astro";
import Steps from "./Steps.astro";
import WhyDenly from "./WhyDenly.astro";
import FAQ from "./FAQ.astro";
import Intro from "./Intro.astro";

interface Props {
  afterTitle: string;
  sect: CollectionEntry<"sections">;
  title: string;
  type: string;
}

const { afterTitle, sect, title, type } = Astro.props;
const { Content } = await sect.render();
---

{
  type === "intro" && (
    <Intro title={title}>
      <Content />
    </Intro>
  )
}

{
  type === "about" && (
    <About title={title}>
      <Content />
    </About>
  )
}

{
  type === "features" && (
    <Features afterTitle={afterTitle} title={title}>
      <Content />
    </Features>
  )
}
<!-- 
{
  type === "steps" && (
    <Steps afterTitle={afterTitle} title={title}>
      <Content />
    </Steps>
  )
} -->

{
  type === "why" && (
    <WhyDenly afterTitle={afterTitle} title={title}>
      <Content />
    </WhyDenly>
  )
}

{
  type === "faq" && (
    <FAQ title={title}>
      <Content />
    </FAQ>
  )
}
