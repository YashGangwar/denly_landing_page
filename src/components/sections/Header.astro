---
import Navbar from "../Navbar.astro";
import "@fontsource-variable/quicksand";

const headerListItems = ["Roommate?", "Flatmate?"];
const site = Astro.site;
---

<link href="https://fonts.cdnfonts.com/css/lemonmilk" rel="stylesheet" />

<header
  id="home"
  class="header w-full min-h-screen flex flex-col justify-center"
>
  <Navbar />
  <div class="flex flex-col justify-center h-full pt-12 margin-top">
    <div
      class="header-container self-center items-center flex flex-col w-full md:w-5/6 xl:w-4/5 px-4 sm:px-0"
    >
      <div class="w-full text-center sm:text-left sm:w-1/2 py-12 sm:px-8">
        <h1 class="tracking-wide text-blue-500 text-6xl mb-6">
          <span
            class="title-denly text-blue-900 font-bold tracking tracking-widest text-lemon"
            >Denly</span
          >
        </h1>
        <div class="sub-title">
          <span>
            <h2 class="font-bold tracking-widest text-sm md:text-xl">
              Looking for perfect
            </h2>
            <span
              class="content__container block font-light text-browngray text-2xl my-2"
            >
              <section class="animation">
                <div class="first">
                  <div class="text-2xl md:text-4xl font-bold">Roommate?</div>
                </div>
                <div class="second text-xl">
                  <div class="text-2xl md:text-4xl font-bold width-100">
                    Flatmate?
                  </div>
                </div>
              </section>
            </span>
          </span>
          <span class="ml-5">
            <h2 class="font-bold tracking-widest text-sm md:text-xl">
              Upgrade to
            </h2>

            <p class="font-bold tracking-widest text-2xl md:text-4xl my-2 py-1">
              Denmate.
            </p>
          </span>
        </div>
      </div>
      <div class="w-full sm:w-1/2">
        <img src={`${site}denly_landing_page/img/doodle.png`} alt="Roomies" />
      </div>
    </div>
  </div>
  <div
    class="flex flex-row w-full justify-center pb-12 absolute bottom cs-button"
  >
    <a
      class="px-10 py-2 text-gray-200 bg-blue-500 rounded-full shadow-md text-lg hover:bg-gray-800 hover:border-red"
      href="#about"
    >
      More Information
    </a>
  </div>
</header>

<style>
  body {
    font-family: "Quicksand";
    background-color: #131417;

    .text-lemon {
      font-family: "Lemon/Milk", sans-serif;
    }
  }
  p {
    text-shadow:
      0 0 7px rgba(255, 255, 255, 0.3),
      0 0 3px rgba(255, 255, 255, 0.3);
  }

  @media only screen and (min-width: 0rem) {
    .header-container {
      flex-direction: column;
    }
    .title-denly {
      width: 100%;
      display: inline-block;
      text-align: center;
    }
    .sub-title {
      display: flex;
      flex-direction: row;
      justify-content: center;
    }
    .animation div:first-child {
      animation: text-animation 8s infinite;
    }
    @keyframes text-animation {
      0% {
        margin-top: 0;
      }
      20% {
        margin-top: 0;
      }
      40% {
        margin-top: -5.3rem;
      }
      60% {
        margin-top: -5.3rem;
      }
      80% {
        margin-top: 0;
      }
      100% {
        margin-top: 0;
      }
    }
  }
  @media only screen and (min-width: 63.9375rem) {
    .header-container {
      flex-direction: row;
    }
    .title-denly {
      text-align: start;
    }
    .sub-title {
      display: flex;
      flex-direction: row;
      justify-content: flex-start;
    }
    .animation div:first-child {
      animation: text-animationLarge 8s infinite;
    }
    @keyframes text-animationLarge {
      0% {
        margin-top: 0;
      }
      20% {
        margin-top: 0;
      }
      40% {
        margin-top: -4.3rem;
      }
      60% {
        margin-top: -4.3rem;
      }
      80% {
        margin-top: 0;
      }
      100% {
        margin-top: 0;
      }
    }
  }

  .container {
    color: #e5e5e5;
    font-size: 2.26rem;
    text-transform: uppercase;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .animation {
    overflow: hidden;
  }

  .animation > div > div {
    padding: 0.25rem 0.75rem;
    height: 2.81rem;
    margin-bottom: 3.22rem;
    display: inline-block;
  }

  .first div {
    background-color: #20a7d8;
  }
  .second div {
    background-color: #cd921e;
  }
  .third div {
    background-color: #c10528;
  }
</style>
